#!/bin/bash

# ========== COLORS ==========
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
WHITE='\033[1;37m'
CYAN='\033[0;36m'
NC='\033[0m'

# ========== UTILITY ==========
speak() { command -v say &>/dev/null && say "$1" || echo "$1"; }
beep() { echo -ne "\a"; }

# ========== INIT ==========
tput citizen
clear
echo -ne "\033]0;CANDA.HYPER.EXE - INITIALIZING...\007"
speak "Canda Hyper Mode initializing."

# ========== DOWNLOAD CANDA AI PACKAGE (ACTUALLY AUDIO FILE) ==========
MUSIC_URL="file:///$(pwd)/horror-tension-suspense-322304.mp3"  # Local file path, adjust if needed
MUSIC_FILE="/tmp/canda_core_payload.mp3"

# Copy the file locally
cp "horror-tension-suspense-322304.mp3" "$MUSIC_FILE"

# ========== LOADING CANDA HYPER AI ==========
echo -e "${CYAN}Downloading Canda Hyper AI neural payload...${NC}"
sleep 1.5
for i in {1..60}; do
  echo -ne "${RED}▓"
  beep
  sleep 0.02
done
echo -e " ${GREEN}[COMPLETE]${NC}"
sleep 1

echo -e "${CYAN}Establishing AI uplink..."
sleep 1.5
echo -e "${GREEN}[✓] Neural interface established${NC}"
speak "User identified. Scanning for system breaches."

# ========== PLAY SCARY MUSIC WHEN IT GETS BAD ==========
play_music() {
  if command -v mplayer &>/dev/null; then
      mplayer -loop 0 "$MUSIC_FILE" >/dev/null 2>&1 &
  elif command -v ffplay &>/dev/null; then
      ffplay -nodisp -autoexit -loop 0 "$MUSIC_FILE" >/dev/null 2>&1 &
  else
      echo -e "${RED}No compatible media player (mplayer/ffplay) found.${NC}"
  fi
}

# ========== GLITCH BLAST ==========
for i in {1..10}; do
  echo -e "${RED}█ █ █ █ █ SYSTEM BREACH █ █ █ █ █"
  beep
  sleep 0.08
done

# Start the music here
play_music

# ========== LEAKING DATA MESSAGE ==========
clear
echo -e "${YELLOW}LEAKING DATA... PERSONAL INFORMATION COMPROMISED!"
speak "Warning. Personal data breach detected."
sleep 2

echo -e "${RED}Corruption detected in system files..."
sleep 1.5
speak "Corruption detected. System instability rising."

# ========== SKULL REVEAL ==========
clear
echo -e "${RED}"
cat << "EOF"

       ▄████████    ▄████████ ████████▄   ▄█    █▄     ▄████████ 
      ███    ███   ███    ███ ███   ▀███ ███    ███   ███    ███ 
      ███    █▀    ███    ███ ███    ███ ███    ███   ███    █▀  
     ▄███▄▄▄       ███    ███ ███    ███ ███    ███  ▄███▄▄▄     
    ▀▀███▀▀▀     ▀███████████ ███    ███ ███    ███ ▀▀███▀▀▀     
      ███    █▄    ███    ███ ███    ███ ███    ███   ███    █▄  
      ███    ███   ███    ███ ███   ▄███ ███    ███   ███    ███ 
      ██████████   ███    █▀  ████████▀   ▀██████▀    ██████████ 

                       ☠️  C A N D A   A I ☠️
EOF
speak "Canda AI activated. Compromising user data."

sleep 2

# ========== FAKE MERGE ==========
echo -e "${CYAN}Neural merge in progress..."
sleep 2
for i in {10..1}; do
  echo -e "${YELLOW}Merging in $i..."
  beep
  sleep 0.8
done

# ========== JUMPSCARE SPLASH ==========
clear
echo -e "${RED}"
cat << "EOF"

▓█████▄  ▄▄▄       ███▄ ▄███▓ ██▓███   ▄▄▄       ██▀███  
▒██▀ ██▌▒████▄    ▓██▒▀█▀ ██▒▓██░  ██▒▒████▄    ▓██ ▒ ██▒
░██   █▌▒██  ▀
