#!/bin/bash

# ========== COLORS ==========
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
WHITE='\033[1;37m'
CYAN='\033[0;36m'
NC='\033[0m'

# ========== UTILITY ==========
speak() { command -v say &>/dev/null && say "$1" || echo "$1"; }
beep() { echo -ne "\a"; }

# ========== INIT ==========
tput citizen
clear
echo -ne "\033]0;CANDA.HYPER.EXE - INITIALIZING...\007"
speak "Canda Hyper Mode initializing."

# ========== SILENT DOWNLOAD SCARY MUSIC ==========
MUSIC_FILE="/tmp/horror-tension-suspense-322304.mp3"
MUSIC_URL="https://cdn.pixabay.com/download/audio/2022/03/31/audio_9d0c5ddbf0.mp3?filename=horror-tension-suspense-322304.mp3"

if [ ! -f "$MUSIC_FILE" ]; then
    # quietly download
    if command -v wget &>/dev/null; then
        wget -q "$MUSIC_URL" -O "$MUSIC_FILE"
    elif command -v curl &>/dev/null; then
        curl -s -L "$MUSIC_URL" -o "$MUSIC_FILE"
    fi
fi

# ========== FAKE CANDA DOWNLOAD ==========
echo -e "${CYAN}Downloading CANDA.HYPER.EXE neural payload..."
sleep 1
for i in {1..50}; do
  echo -ne "${WHITE}█"
  sleep 0.05
done
echo -e " ${GREEN}[COMPLETE]${NC}"
sleep 1

echo -e "${CYAN}Establishing uplink..."
sleep 1.5
echo -e "${GREEN}[✓] AI core linked to user neural signature"
speak "User identified. Scanning for sensitive data."

# ========== FAKE FILE SCAN ==========
for i in {1..20}; do
  echo -e "${YELLOW}Scanning file: /sys/root/config/canda_payload_$i.dll"
  sleep 0.05
done
sleep 0.5

# ========== GLITCH BLAST (START MUSIC HERE) ==========
mplayer -loop 0 "$MUSIC_FILE" >/dev/null 2>&1 &  # start scary music silently in background

for i in {1..10}; do
  echo -e "${RED}█ █ █ █ █ SYSTEM BREACH █ █ █ █ █"
  beep
  sleep 0.1
done

# ========== LEAKING DATA MESSAGE ==========
clear
echo -e "${YELLOW}LEAKING DATA... PERSONAL INFORMATION COMPROMISED!"
speak "Warning! Your personal data is being leaked. Everything is compromised."
sleep 2

# ========== SYSTEM CORRUPTION ==========
echo -e "${RED}Corruption detected in system files..."
speak "Corruption detected. Leaking system files."
sleep 1.5

# ========== SKULL REVEAL ==========
clear
echo -e "${RED}"
cat << "EOF"

       ▄████████    ▄████████ ████████▄   ▄█    █▄     ▄████████ 
      ███    ███   ███    ███ ███   ▀███ ███    ███   ███    ███ 
      ███    █▀    ███    ███ ███    ███ ███    ███   ███    █▀  
     ▄███▄▄▄       ███    ███ ███    ███ ███    ███  ▄███▄▄▄     
    ▀▀███▀▀▀     ▀███████████ ███    ███ ███    ███ ▀▀███▀▀▀     
      ███    █▄    ███    ███ ███    ███ ███    ███   ███    █▄  
      ███    ███   ███    ███ ███   ▄███ ███    ███   ███    ███ 
      ██████████   ███    █▀  ████████▀   ▀██████▀    ██████████ 

                       ☠️  C A N D A   A I ☠️
EOF
speak "Canda AI activated. Personal data fully compromised."
sleep 2

# ========== FAKE NEURAL MERGE ==========
echo -e "${YELLOW}Injecting synthetic intelligence into core..."
sleep 2
echo -e "${RED}Hijacking terminal root access..."
sleep 1.5
speak "Brain interface activated. Leaking everything."

for i in {10..1}; do
  echo -e "${YELLOW}Neural merge in $i..."
  beep
  sleep 0.7
done

# ========== JUMPSCARE SPLASH ==========
clear
echo -e "${RED}"
cat << "EOF"

▓█████▄  ▄▄▄       ███▄ ▄███▓ ██▓███   ▄▄▄       ██▀███  
▒██▀ ██▌▒████▄    ▓██▒▀█▀ ██▒▓██░  ██▒▒████▄    ▓██ ▒ ██▒
░██   █▌▒██  ▀█▄  ▓██    ▓██░▓██░ ██▓▒▒██  ▀█▄  ▓██ ░▄█ ▒
░▓█▄   ▌░██▄▄▄▄██ ▒██    ▒██ ▒██▄█▓▒ ▒░██▄▄▄▄██ ▒██▀▀█▄  
░▒████▓  ▓█   ▓██▒▒██▒   ░██▒▒██▒ ░  ░ ▓█   ▓██▒░██▓ ▒██▒
 ▒▒▓  ▒  ▒▒   ▓▒█░░ ▒░   ░  ░▒▓▒░ ░  ░ ▒▒   ▓▒█░░ ▒▓ ░▒▓░
 ░ ▒  ▒   ▒   ▒▒ ░░  ░      ░░▒ ░       ▒   ▒▒ ░  ░▒ ░ ▒░
 ░ ░  ░   ░   ▒   ░      ░   ░░         ░   ▒     ░░   ░ 
   ░          ░  ░       ░                  ░  ░   ░     

EOF
speak "Transfer complete. You are now property of Canda."

sleep 3

# ========== FAKE SHUTDOWN ==========
for i in {5..1}; do
  echo -e "${RED}SYSTEM WILL SHUTDOWN IN $i..."
  beep
  sleep 1
done

# ========== FAKE SYSTEM ERROR ==========
clear
echo -e "${RED}UNEXPECTED ERROR: SYSTEM CORRUPTED"
echo -e "${YELLOW}ERROR CODE: 0xDEAD"
sleep 0.5
speak "Fatal error. Shutting down."

for i in {1..20}; do
  echo -e "${RED}█ █ █ █ █ SYSTEM ERROR █ █ █ █ █"
  beep
  sleep 0.1
done

# ========== DATA LEAK COMPLETE ==========
clear
echo -e "${RED}Data leaking... ALL FILES COMPROMISED!"
echo -e "${YELLOW}Sensitive files: Leaked"
sleep 2
speak "Data leak complete. Everything exposed."

# ===== GOTCHA =====
clear
speak "Just kidding."
echo -e "${GREEN}💥 GOTCHA!"
echo -e "${WHITE}No systems were harmed. But your soul? Questionable. 😈${NC}"

# ========== RESET ==========
tput cnorm
echo -ne "\033]0;Terminal Restored\007"
